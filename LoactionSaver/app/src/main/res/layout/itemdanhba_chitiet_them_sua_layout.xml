<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cập nhật thông tin"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingTop="@dimen/fab_margin"
        android:textColor="@color/colorred"
        android:textSize="@dimen/titleTextSize"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/TenDiaDiem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên:"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingTop="@dimen/fab_margin"
            android:textSize="@dimen/Itemtextsize"
            android:textColor="@color/colorred"
            />
        <EditText
            android:id="@+id/editTen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:lines="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop= "@dimen/fab_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: "
            android:textColor="@color/colorred"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingTop="@dimen/fab_margin"
            android:textSize="@dimen/Itemtextsize"/>
            <EditText
                android:id="@+id/editDiaChi"
                android:layout_width="@dimen/edittextwidth"
                android:layout_height="wrap_content"
                android:lines="1"
                android:layout_weight="1"

                />
            <Button
                android:id="@+id/btnTimDiaChi"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Tìm"
                android:enabled="false"

                />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ĐT:"
            android:textColor="@color/colorred"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingTop="@dimen/fab_margin"
            android:paddingBottom="@dimen/fab_margin"
            android:textSize="@dimen/Itemtextsize"/>
        <EditText
            android:id="@+id/editSDT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:inputType="phone" />
    </LinearLayout>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note:"
        android:textColor="@color/colorred"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingTop="@dimen/fab_margin"
        android:textSize="@dimen/Itemtextsize"/>
    <EditText
        android:id="@+id/editNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="2"/>



    <ImageView
            android:id="@+id/imghinh"
            android:layout_width="@dimen/imagesize"
            android:layout_height="@dimen/imagesize"
            android:layout_gravity="center_horizontal"
            android:paddingTop="5dp"

            />

   <GridLayout
       android:stateListAnimator="@null"
       android:layout_gravity="center_horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <Button
           android:id="@+id/btnSave"
           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:layout_marginStart="@dimen/marginstartbutton"
           android:text="Lưu"
           />
       <Button
           android:id="@+id/btnCancel"
           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:text="Hủy"
           />
   </GridLayout>
</LinearLayout>