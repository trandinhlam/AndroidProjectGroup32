<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhập/Cập nhật thông tin"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingTop="@dimen/fab_margin"
        android:textColor="#DA4336"
        android:textSize="@dimen/titleTextSize"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:id="@+id/TenDiaDiem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên:"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingTop="@dimen/fab_margin"
        android:textSize="@dimen/Itemtextsize"
        android:textColor="@color/textcolor1"
        />
    <EditText
        android:id="@+id/editTen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Địa chỉ"
        android:textColor="@color/textcolor1"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingTop="@dimen/fab_margin"
        android:textSize="@dimen/Itemtextsize2"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="@dimen/edittextwidth"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/editDiaChi"
            android:layout_width="@dimen/edittextwidth"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            />
        <Button
            android:id="@+id/btnTimDiaChi"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Tìm"

            />
    </LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ĐT:"
        android:textColor="@color/textcolor1"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingTop="@dimen/fab_margin"
        android:paddingBottom="@dimen/fab_margin"
        android:textSize="@dimen/Itemtextsize2"/>
    <EditText
        android:id="@+id/editSDT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="1"
        android:inputType="phone" />


    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note:"
        android:textColor="@color/textcolor1"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingTop="@dimen/fab_margin"
        android:textSize="@dimen/Itemtextsize2"/>
    <EditText
        android:id="@+id/editNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="5"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/fab_margin"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/fab_margin"
            />
    </LinearLayout>
   <GridLayout
       android:layout_gravity="center_horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content">

       <Button
           android:id="@+id/btnSave"
           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:layout_marginStart="@dimen/marginstartbutton"
           android:text="Lưu"
           />
       <Button
           android:id="@+id/btnCancel"
           android:layout_width="100dp"
           android:layout_height="wrap_content"
           android:text="Hủy"
           />
   </GridLayout>
</LinearLayout>