<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <TextView
        android:id="@+id/TieuDe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thông tin vị trí"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingTop="@dimen/fab_margin"
        android:textColor="#DA4336"
        android:textSize="@dimen/titleTextSize"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:id="@+id/TenDiaDiem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên:"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingTop="@dimen/fab_margin"
        android:textSize="@dimen/Itemtextsize"
        android:textColor="@color/textcolor1"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/DiaChi"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Địa chỉ:"
            android:textColor="@color/textcolor1"
            android:paddingLeft="@dimen/fab_margin"
            android:paddingTop="@dimen/fab_margin"
            android:textSize="@dimen/Itemtextsize2"/>
        <Button
            android:id="@+id/btnChiDuong"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Chỉ đường"/>
    </LinearLayout>

    
    <TextView
        android:id="@+id/SDT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ĐT:"
        android:textColor="@color/textcolor1"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingTop="@dimen/fab_margin"
        android:paddingBottom="@dimen/fab_margin"
        android:textSize="@dimen/Itemtextsize2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <TextView
        android:id="@+id/Note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note: \n\n\n"
        android:textColor="@color/textcolor1"
        android:paddingLeft="@dimen/fab_margin"
        android:paddingBottom="@dimen/fab_margin"
        android:paddingTop="@dimen/fab_margin"
        android:textSize="@dimen/Itemtextsize2"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <ImageView
        android:id="@+id/hinhanhchitiet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/fab_margin"
        />
</LinearLayout>